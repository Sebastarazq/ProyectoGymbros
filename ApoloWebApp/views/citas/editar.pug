extends ../layout/index2

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Apolo 
            span.font-normal 
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8(method="POST")
                input(type="hidden" name="_csrf" value= csrfToken)

                .space-y-5 
                    h3.text-lg.leading-6.font-medium.text-gray-900 Tipo de Cita
                    p.text-gray-600 Selecciona el tipo de cita que deseas

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="tipoCita") Tipo de Cita
                        select#tipoCita.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="tipoCita")
                            option(value="") - Seleccione -
                            if tiposCitas
                                each tipo in tiposCitas
                                    option(value=tipo.id selected= datos.tipo_cita_id === tipo.id)= tipo.nombre



                    h3.text-lg.leading-6.font-medium.text-gray-900 Fecha y Hora
                    p.text-gray-600 Selecciona la fecha y hora para tu cita

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="fecha") Fecha de la Cita
                        input#fecha.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Fecha de la cita" type="date" name="fecha" value= datos.fecha ? datos.fecha :'')
                    
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-3 font-bold" for="hora") Hora de la Cita
                        input#hora.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Hora de la cita" type="time" name="hora" value= datos.hora ? datos.hora :'')

                    input(class="w-full py-3 bg-orange-500 hover:bg-orange-600 rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Agendar Cita")
